{
  "version": 2,
  "functions": {
    "api/index.js": {
      "includeFiles": "public/**,src/**,data/**,config/**"
    },
    "api/zone/[id].js": {
      "includeFiles": "src/**,config/**"
    },
    "api/zones.js": {
      "includeFiles": "src/**,config/**"
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/admin",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/zone/:id",
      "destination": "/api/zone/[id]"
    },
    {
      "source": "/api/zones",
      "destination": "/api/zones"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
